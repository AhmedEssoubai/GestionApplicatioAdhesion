<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <servlet>
    <servlet-name>accueil</servlet-name>
    <jsp-file>/WEB-INF/views/accueil.jsp</jsp-file>
    </servlet>
    <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/WEB-INF/views/connecter.jsp</jsp-file>
    </servlet>
    <servlet>
    <servlet-name>Sign</servlet-name>
    <jsp-file>/WEB-INF/views/inscrire.jsp</jsp-file>
    </servlet>
    <servlet>
    <servlet-name>ajouterenfant</servlet-name>
    <jsp-file>/WEB-INF/views/famille/ajouter-enfants.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    <servlet-name>accueil</servlet-name>
    <url-pattern>/Accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>Sign</servlet-name>
    <url-pattern>/Inscrire</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>ajouterenfant</servlet-name>
    <url-pattern>/Ajouter</url-pattern>
    </servlet-mapping>
    <error-page>
      <error-code>500</error-code>
      <location>/WEB-INF/views/error/error-500.jsp</location>
    </error-page>
    <error-page>
      <error-code>404</error-code>
      <location>/WEB-INF/views/error/error-404.jsp</location>
    </error-page>
    
    <welcome-file-list>
        <welcome-file>WEB-INF/views/accueil.jsp</welcome-file>
    </welcome-file-list>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
